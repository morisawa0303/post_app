<h1>新規登録</h1>
<%= form_for @user,url: "/user/create" do |u|%>

  <div class="field">
      <%= u.label :name,"名前" %>
      <br>
      <%= u.text_field :name %>
    </div>

      <div class="field">
      <%= u.label :mail,"メールアドレス" %>
      <br>
      <%= u.text_field :mail %>
    </div>

    <div class="actions">
      <%= u.submit "登録" %>
    </div>
<%end%>